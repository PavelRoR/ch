#fourth_section
    background-image: url(../img/second_screen_back.jpg)
    background-position: center top
    background-repeat: no-repeat
    background-size: contain
    width 100%
    padding: 100px 0 60px
    overflow: hidden
    h3
        font-size: 45px;
        font-family: "Lobster";
        color: rgb(36, 35, 34);
        line-height: 1
        text-align: center;
        margin-bottom: 90px
    h4
        font-size: 30px;
        font-family: "Lobster";
        color: rgb(198, 42, 47);
        line-height: 1
        margin 0 0 35px
#sohia_about
    display: block
    width: 100%
#ul_about
    li
        font-size: 16px;
        font-family: "Comfortaa";
        color: rgb(36, 35, 34);
        line-height: 1.3;
        list-style-image: url(../img/star.jpg)
        margin-bottom: 20px
a.button
    width: 350px;
    margin: 60px auto 0;
    padding: 4px 0;
    &:hover,
    &:focus
        color: #ffffff
        text-decoration: none