#first_section
	background-image: url(../img/first_screen_back.jpg)
	background-position: top center 
	background-repeat: no-repeat
	background-size: cover
	width 100%
	padding-top: 20px
	.container
		position: relative
#date_ball
	position: absolute;
	top: -20px;
	left: 72px;
#logo
	float: left
#contacts
	float: right
	text-align: right
	a
		color: #fcfafa
		font-family: OpenSans, sans-serif
		font-size: 18px
		font-weight: bold
		line-height: 25px
		text-decoration: none
		padding-left: 75px
		&:hover
			text-decoration: underline
		&:first-child
			padding-left: 35px
			background-image: url(../img/phone.png);
			background-repeat: no-repeat
			background-size: contain
			background-position: 0 center
		&:nth-child(2)
			background-image: url(../img/skype.png);
			background-repeat: no-repeat
			background-size: contain
			background-position: 35px center
		&:last-child
			background-image: url(../img/mail.png);
			background-repeat: no-repeat
			background-size: contain
			background-position: 35px center
.h_prev
	font-size: 24px;
	font-family: "Comfortaa";
	color: rgb(219, 64, 73);
	font-weight: bold;
	line-height: 1;
	text-align: center;
	text-shadow: 0px 0px 9px rgba(0, 0, 0, 0.6);
	margin-top: 65px
h1
	font-size: 40px;
	font-family: "Lobster";
	color: rgb(255, 255, 255);
	line-height: 1.4;
	text-align: center;
	text-shadow: 0px 0px 9px rgba(0, 0, 0, 0.6);
	margin: 20px auto 10px
	width 60%
h2
	font-size: 27px;
	font-family: "Lobster";
	color: rgb(210, 62, 71);
	line-height: 2;
	text-align: center;
	text-shadow: 0px 0px 9px rgba(0, 0, 0, 0.6)
	margin: 0
.video_wrapper
	position: relative;
	width: 92%;
	margin: 35px auto;
	&:before 
		content: '';
		display: block;
		padding-top: 56.45%;
		height: 0;
		margin: 20px 0;

	iframe
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		border: 0
		background-color: #fff
		border-radius: 5px
#sophia
	position: absolute
	bottom: 0
	right: 0